@model CommonLayer.Product

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Shared/_FrontEnd.cshtml";
}

<div class="col-md-9">
    @using (Html.BeginForm("AddProductToCart", "Products", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        <div class="thumbnail">
            <img class="img-responsive" src="@Model.ImageURL" alt=""> <!--800x300-->
            <div class="caption-full">
                <h4 class="pull-right">@Model.Price</h4>
                <h4>
                    <a href="#">@Model.Name</a>
                </h4>
                <p>@Model.Description</p>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>