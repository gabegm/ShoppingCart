@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Shared/_FrontEnd.cshtml";
}

<div class="col-md-9">
    <h2>Checkout</h2>
    @using (Html.BeginForm("ProcessOrder", "Checkout", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
            
        <div class="form-group">
            @Html.Label("Name", new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                @Html.TextBox("Name", null, new { @class = "form-control", placeholder = "Enter full name here..." })
                @Html.ValidationMessage("Name")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Address", new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                @Html.TextBox("Address", null, new { @class = "form-control", placeholder = "Enter address here..." })
                @Html.ValidationMessage("Address")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Card Number", new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                @Html.TextBox("Card Number", null, new { @class = "form-control", placeholder = "Enter card number here..." })
                @Html.ValidationMessage("CardNumber")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("ExpiryDate", new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                @Html.TextBox("ExpiryDate", null, new { @class = "form-control", placeholder = "Enter expiry date here..." })
                @Html.ValidationMessage("ExpiryDate")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("CVV", new { @class = "control-label col-md-2" })
            <div class="col-sm-10">
                @Html.TextBox("CVV", null, new { @class = "form-control", placeholder = "Enter cvv here..." })
                @Html.ValidationMessage("CVV")
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Checkout</button>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to Cart", "Index", "Cart")
    </div>
</div>