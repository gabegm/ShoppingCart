@model IQueryable<CommonLayer.Models.ProductsModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Shared/_FrontEnd.cshtml";
}

<div class="col-md-9">
    @Html.Partial("~/Views/_Shared/_Carousel.cshtml")
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="@Html.DisplayFor(modelItem => item.ImageURL)" alt=""> <!--320x150-->
                    <div class="caption">
                        <h4 class="pull-right">@Html.DisplayFor(modelItem => item.Price)</h4>
                        <h4>
                            @Html.ActionLink(Html.DisplayFor(modelItem => item.Name).ToString(), "Index", "Product", new { ID = item.ID })
                        </h4>
                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>