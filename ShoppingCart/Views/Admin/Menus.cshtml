@model IQueryable<CommonLayer.Menu>

@{
    ViewBag.Title = "Menus";
    Layout = "~/Views/_Shared/_BackEnd.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h2>Menus</h2>
    <p>@Html.ActionLink("Create New", "CreateNewMenu")</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ActionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().ControllerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Active)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ControllerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditMenu", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "DeleteMenu", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
</div>