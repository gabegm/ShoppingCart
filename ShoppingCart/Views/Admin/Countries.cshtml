@model IQueryable<CommonLayer.Country>
@{
    ViewBag.Title = "Countries";
    Layout = "~/Views/_Shared/_BackEnd.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h2>Countries</h2>
    <p>@Html.ActionLink("Create New", "CreateNewCountry")</p>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(mode => Model.FirstOrDefault().Active)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <th>
                            @Html.DisplayFor(modeItem => item.Active)
                        </th>
                        <td>
                            @Html.ActionLink("Edit", "EditCountry", new { ID = item.ID }) |
                            @Html.ActionLink("Delete", "DeleteCountry", new { ID = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
</div>

