@model CommonLayer.Models.UsersModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_Shared/_Login.cshtml";
}

<div id="login" class="col-lg-12">
    <div class="container">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal form-signin" }))
        {
            if (ViewBag.LoginInvalid != null)
            {
                <h2>Login invalid!</h2>
            }
            <h2 class="form-signin-heading">Sign in</h2>
            <div class="form-group">
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-block-level", type = "email", placeholder="Email" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control input-block-level", placeholder="Password" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        }
    </div>
</div>