@model IQueryable<CommonLayer.Models.ProductsModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Shopping Cart">
    <meta name="author" content="Gabriel Gauci Maistre">
    <title>@ViewBag.Title</title>

    <!-- Shopping Cart Core CSS -->
    <link href="~/content/bootstrap.css" rel="stylesheet">
    <link href="~/content/frontend.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Telecell", "Index", "Home", new { @class = "navbar-brand" })
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @foreach (CommonLayer.Models.MenusModel Menu in ViewBag.ParentMenus)
                    {
                        <li>@Html.ActionLink(Html.DisplayFor(modelItem => Menu.Name).ToHtmlString(), Html.DisplayFor(modelItem => Menu.ActionName).ToHtmlString(), Html.DisplayFor(modelItem => Menu.ControllerName).ToHtmlString())</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Telecell</p>
                <div id="MainMenu" class="list-group">
                    <div class="list-group panel">
                        <a href="#demo3" class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu">Accessories</a>
                        <div class="collapse" id="demo3">
                            <a href="#" class="list-group-item">Cases</a>
                            <a href="#" class="list-group-item">Powerbanks</a>
                            <a href="#" class="list-group-item">Cables</a>
                            <a href="#" class="list-group-item">Wearables</a>
                            <a href="#" class="list-group-item">Speakers</a>
                            <a href="#" class="list-group-item">Screen Protectors</a>
                            <a href="#" class="list-group-item">Chargers</a>
                            <a href="#" class="list-group-item">Expandable Storage</a>
                            <a href="#" class="list-group-item">Batteries</a>
                            <a href="#" class="list-group-item">Sim Cards</a>
                        </div>
                        <a href="#demo4" class="list-group-item list-group-item-success" data-toggle="collapse" data-parent="#MainMenu">Phones</a>
                        <div class="collapse" id="demo4">
                            <a href="#" class="list-group-item">Apple</a>
                            <a href="#" class="list-group-item">Microsoft</a>
                            <a href="#" class="list-group-item">Motorola</a>
                            <a href="#" class="list-group-item">Nokia</a>
                            <a href="#" class="list-group-item">HTC</a>
                            <a href="#" class="list-group-item">Samsung</a>
                            <a href="#" class="list-group-item">Huawei</a>
                            <a href="#" class="list-group-item">LG</a>
                            <a href="#" class="list-group-item">Sony</a>
                            <a href="#" class="list-group-item">Blackberry</a>
                        </div>
                    </div>
                </div>
            </div>

            @RenderBody()

        </div>
    </div>
    <!-- /.container -->

    <div class="container">
        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; 2015-2016 <a href="http://www.gabriel.gaucimaistre.com">Gabriel Gauci Maistre</a></p>
                </div>
            </div>
        </footer>
    </div>
    <!-- /.container -->
    <!-- ShoppingCart core JavaScript
    ================================================== -->
    <!-- jQuery -->
    <script src="~/scripts/jquery-2.1.4.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/scripts/vue.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/scripts/bootstrap.js"></script>

    <!-- Front End JavaScript -->
    <script src="~/scripts/frontend.js"></script>
</body>
</html>