@model IQueryable<CommonLayer.Models.OrdersModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Shared/_FrontEnd.cshtml";
}

<div class="col-md-9">
    <h2>Orders</h2>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Number)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Date)
                    </th>
                    <th>
                        @Html.DisplayName("Quantity")
                    </th>
                    <th>
                        @Html.DisplayName("Price")
                    </th>
                    <th>
                        @Html.DisplayName("VAT")
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductVATRate)&#37;
                        </td>
                        <td>
                            @Html.ActionLink("View Product", "Index", "Product", new { ID = item.ProductID }, null) |
                            @Html.ActionLink("Order Details", "Detail", "Order", new { ID = item.OrderDetailsID }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a href="javascript:window.print()">Print Orders</a>
    </div>
    <div>
        @Html.ActionLink("Back to Products", "Index", "Home")
    </div>
</div>